<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:id="@+id/order_list_item_textView_orderid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="77589349000"
            android:textSize="@dimen/textsize14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/style_dashed_line"
            android:layerType="software" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5"
        android:paddingTop="@dimen/margin10" >

        <ImageView
            android:id="@+id/order_list_item_imageView_pic"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_love_fund"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总金额:　　　"
                    android:textSize="@dimen/textsize16" />

                <TextView
                    android:id="@+id/order_list_item_textView_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥378.00"
                    android:textColor="@color/orangered"
                    android:textSize="@dimen/textsize16" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单状态:　　"
                    android:textSize="@dimen/textsize16" />

                <TextView
                    android:id="@+id/order_list_item_textView_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已支付"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/textsize16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <Button
                android:id="@+id/order_list_item_button_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btn_yes_background"
                android:gravity="center"
                android:paddingLeft="@dimen/margin2"
                android:paddingRight="@dimen/margin2"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize14"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间:　　"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/order_list_item_textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-06-06 19:21:36"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize16" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备　　注:　　"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/order_list_item_textView_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注信息"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize16" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin5" />

    <LinearLayout
        android:id="@+id/order_list_item_layout_handing_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费　　率:　　"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/order_list_item_textView_handing_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥10"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize16" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin10"
        android:background="#F2F2F2" />

</LinearLayout>