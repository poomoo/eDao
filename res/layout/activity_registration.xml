<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/navigation_fragment"
        android:name="com.poomoo.edao.navigation.ReturnNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/logo_height"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin10" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="手机号码:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/style_background"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/registration2_editText_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/registration2_textView_isUsed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="可以使用"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textsize10" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/between_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="验  证  码:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/style_background"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/registration2_editText_identitynum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="请输入验证码 "
                    android:inputType="number"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/textsize14" />

                <Button
                    android:id="@+id/registration2_btn_identitynum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/between_height"
                    android:layout_weight="1"
                    android:background="@drawable/style_identy_button_no_frame"
                    android:text="获取验证码"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize12" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/between_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="密        码:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize16" />

            <EditText
                android:id="@+id/registration2_editText_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/style_background"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/between_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="确认密码:"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize16" />

            <EditText
                android:id="@+id/registration2_editText_password_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/style_background"
                android:hint="确认设置密码"
                android:inputType="textPassword"
                android:paddingLeft="8dp"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/registration2_btn_regist"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:background="@drawable/style_btn_yes_background"
            android:gravity="center"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>