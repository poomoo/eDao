<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/fragment_status_radioGroup_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin10"
        android:paddingRight="@dimen/margin10" >

        <RadioButton
            android:id="@+id/fragment_status_radioButton_payed"
            style="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="已支付"
            android:textColor="@drawable/style_navigation_text_background"
            android:textSize="@dimen/textsize14" />

        <RadioButton
            android:id="@+id/fragment_status_radioButton_nopay"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin40"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="未支付"
            android:textColor="@drawable/style_navigation_text_background"
            android:textSize="@dimen/textsize14" />

        <RadioButton
            android:id="@+id/fragment_status_radioButton_delete"
            style="@null"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="已删除"
            android:textColor="@drawable/style_navigation_text_background"
            android:textSize="@dimen/textsize14" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro" />

    <FrameLayout
        android:id="@+id/fragment_status_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>