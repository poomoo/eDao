<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/order_list_item_textView_orderid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="77589349000"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/style_dashed_line"
            android:layerType="software" />
    </LinearLayout>

    <ImageView
        android:id="@+id/order_list_item_imageView_pic"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_love_fund"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5"
        android:paddingTop="@dimen/margin5" >

        <TextView
            android:id="@+id/order_list_item_textView_store_name_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户名称:　"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/order_list_item_textView_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跑马"
            android:textColor="@color/green"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:　"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/order_list_item_textView_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥378.00"
                android:textColor="@color/orangered"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付类型:　"
                android:textSize="@dimen/textsize12" />

            <TextView
                android:id="@+id/order_list_item_textView_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待商户确定"
                android:textColor="@color/orange"
                android:textSize="@dimen/textsize12" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易时间:　"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/order_list_item_textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-06-06 19:21:36"
            android:textColor="@color/gray" >
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备　　注:　"
            android:textSize="@dimen/textsize12" />

        <TextView
            android:id="@+id/order_list_item_textView_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注信息"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingBottom="@dimen/margin5"
        android:paddingRight="@dimen/margin5" >

        <Button
            android:id="@+id/order_list_item_button_pay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin30"
            android:background="@drawable/style_btn_yes_background"
            android:gravity="center"
            android:paddingLeft="@dimen/margin2"
            android:paddingRight="@dimen/margin2"
            android:text="确认支付"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin10"
        android:background="#F2F2F2" />

</LinearLayout>