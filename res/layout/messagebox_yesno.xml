<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/style_dialog" >

        <TextView
            android:id="@+id/messagebox_yesno_textView_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="标题"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/textsize18" />

        <View
            android:id="@+id/messagebox_yes_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#d7d7d7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/messagebox_yes_line"
            android:layout_centerInParent="true"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/messagebox_yesno_btn_cancel"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/style_btn_msgbox_cancle"
                android:gravity="center"
                android:text="取消"
                android:textSize="@dimen/textsize16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/messagebox_yesno_btn_ok"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/style_btn_msgbox_ok"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>