<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >

    <com.poomoo.edao.widget.ScrollerNumberPicker
        android:id="@+id/picker_province"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        su:itemNumber="3"
        su:lineColor="#55BB22"
        su:maskHight="100dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="@dimen/textsize14"
        su:overLengthTextSize="@dimen/textsize12"
        su:selecredTextColor="#ff000000"
        su:selecredTextSize="@dimen/textsize18"
        su:unitHight="50dp" />

    <com.poomoo.edao.widget.ScrollerNumberPicker
        android:id="@+id/picker_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        su:itemNumber="3"
        su:lineColor="#55BB22"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="@dimen/textsize14"
        su:overLengthTextSize="@dimen/textsize12"
        su:selecredTextColor="#ff000000"
        su:selecredTextSize="@dimen/textsize18"
        su:unitHight="50dp" />

    <com.poomoo.edao.widget.ScrollerNumberPicker
        android:id="@+id/picker_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        su:itemNumber="3"
        su:lineColor="#55BB22"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="@dimen/textsize14"
        su:overLengthTextSize="@dimen/textsize12"
        su:selecredTextColor="#ff000000"
        su:selecredTextSize="@dimen/textsize18"
        su:unitHight="50dp" />

</LinearLayout>