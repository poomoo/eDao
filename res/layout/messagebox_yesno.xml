<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/style_dialog" >

        <TextView
            android:id="@+id/messagebox_yesno_textView_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="标题"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/textsize20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/messagebox_yesno_textView_content"
            android:layout_marginTop="30dp"
            android:background="#d7d7d7" />

        <Button
            android:id="@+id/messagebox_yesno_btn_ok"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_alignBaseline="@+id/messagebox_yesno_btn_cancel"
            android:layout_alignBottom="@+id/messagebox_yesno_btn_cancel"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_btn_msgbox_ok"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize18" />

        <Button
            android:id="@+id/messagebox_yesno_btn_cancel"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/style_btn_msgbox_cancle"
            android:text="取消"
            android:textSize="@dimen/textsize18" />
    </RelativeLayout>

</RelativeLayout>